<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardProducto"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:transitionName="zoomImageProducto"

        app:cardBackgroundColor="#303030"
        app:cardCornerRadius="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:id="@+id/imagenProducto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/liverpool_logo"
                />

            <TextView
                android:visibility="invisible"
                android:id="@+id/textPlaceHolder"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#446895"
                android:text="asdasdasd ajsadkajsdkajs"
                android:textColor="#fcfcfc"
                android:maxLength="20"
                android:textSize="26sp"
                android:gravity="center"
                android:alpha="0.7"
                />

            <FrameLayout
                android:id="@+id/viewBackCategoria"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:alpha="0.9"
                android:background="@color/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textNombreProducto"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:text="ajshdkajsdhkasjda"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/textPrecio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="$20"
                        android:textColor="#ffffff" />

                </LinearLayout>


            </FrameLayout>


        </FrameLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>